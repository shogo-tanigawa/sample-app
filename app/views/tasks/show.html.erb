<% provide(:title, @user.name) %>
<div class="container">
  <h1>タスク詳細</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-borderd table-task">
        <tbody>
          <tr>
            <th class="active col-md-2"><%= Task.human_attribute_name :id %></th>
            <td class="col-md-10"><%= @tasks.id %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :name %></th>
            <td><%= @tasks.name %></td></td>
          </tr>
          <tr>
          <th class="active"><%= Task.human_attribute_name :description %></th>
          <td><%= description_url_to_link(@tasks.description).html_safe %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :created_at %></th>
            <td><%= l(@tasks.created_at, format: :long) %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :updated_at %></th>
            <td><%= l(@tasks.updated_at, format: :long) %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集", edit_user_task_path(current_user, @tasks.id), class: "btn btn-lg btn-success" %>
      <%= link_to "削除", user_task_path(@user.id, @tasks.id), method: :delete, data: { confirm: "「#{@tasks.name}」を削除します。よろしいですか？" }, class: "btn btn-lg btn-danger" %>
    </div>
  </div>
</div>