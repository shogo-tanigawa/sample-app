<% provide(:title, "Task") %>
<div class="main tasks-index">
  <div class="container">
    <h1><%=  %>のタスク一覧</h1>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <a class="btn btn-lg btn-primary pull-right" href="/new_task">タスク新規作成</a>
        <table class="table table-hover" id="table-tasks">
          <thead>
            <tr>
              <th>名称</th>
              <th>作成日</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <a id="task-name" href="/task">あとで</a>
              </td>
              <td>あとで</td>
              <td>
                <a class="btn btn-success" href="/edit_task">編集</a>
                <a data-confirm="「あとで」を削除します。よろしいですか？" class="btn btn-danger" rel="nofollow" data-method="delete" href="/task">削除</a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>