<% provide(:title, "Task") %>
<div class="main tasks-index">
  <div class="container">
    <h1><%=  %>のタスク一覧</h1>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <%= link_to "タスク新規作成", new_user_task_path, class: "btn btn-lg btn-primary pull-right" %>
        <table class="table table-hover" id="table-tasks">
          <thead>
            <tr>
              <th>名称</th>
              <th>作成日</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= link_to task.name, "#", id: "task-name" %></td>
                <td><%= l(task.created_at, format: :long) %></td>
                <td>
                  <%= link_to "編集", "#", class: "btn btn-success" %>
                  <%= link_to "削除", "#", method: :delete, data: { confirm: "「#{task.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>